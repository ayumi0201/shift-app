<div class="container">
  <div class="pt-5 container"></div>
  <div class="row pb-5">
    <div class="col-5 mx-auto">
      <p class="h1 text-center">欠勤編集</p>
    </div>
  </div>

  <div class="row pb-5">
    <div class="d-flex col-4 mx-auto">
      <div class="col-8 text-center">　出勤日　：　</div>
      <div class="col-4 text-start"><%= @absence_request.schedule.starting_time.strftime('%Y年%m月%d日') %></div>
    </div>
  </div>
  <div class="row pb-5">
    <div class="d-flex col-4 mx-auto">
      <div class="col-8 text-center"> 出勤時間　：　</div>
      <div class="col-4 text-start"><%= @absence_request.schedule.starting_time.strftime('%H:%M') %></div>
    </div>
  </div>
  <div class="row pb-5">
    <div class="d-flex col-4 mx-auto">
      <div class="col-8 text-center">退勤時間　：　</div>
      <div class="col-4 text-start"><%= @absence_request.schedule.closing_time.strftime('%H:%M') %></div>
    </div>
  </div>
  <div class="row pb-5">
    <div class="d-flex col-4 mx-auto">
      <div class="col-8 text-center">申請状態　：　</div>
      <div class="col-4 text-start"><%= @absence_request.state_i18n %></div>
    </div>
  </div>
  <div class="pt-3 container"></div>
</div>

  <%= form_with(model: [ :administrator, @absence_request], local: true) do |form| %>
    <div class="row">
      <div class="d-flex col-5 mx-auto">
        <%= form.select :state, [['承認', 'approval'], ['却下', 'rejection']], {}, { class: 'form-control' } %>
      </div>
    </div>
    <div class="py-5 container text-center">
      <%= form.submit '申請', class: "btn btn-outline-primary text-center" %>
    </div>
    <div class="py-3 container text-center">
      <%= link_to "申請一覧に戻る", administrator_absence_requests_path(@absence_request), class: "btn btn-outline-primary text-center" %>
    </div>
  <% end %>
