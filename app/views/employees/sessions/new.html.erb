<div class="container">
  <div class="pt-5 container"></div>
  <div class="pt-5 container"></div>
  <p class="h1 text-center my-5">従業員ログイン</p>
  <div class="pt-4 container"></div>

  <%= form_with model: @employee, url: employee_session_path, local: true do |f| %>
    <div class="container mb-4 text-center">
      <div class="row justify-content-center">
        <%= f.label :email, "メールアドレス", class: "col-form-label col-sm-2 text-center"%>
        <div class="col-sm-6">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="container text-center mb-5">
      <div class="row justify-content-center">
        <%= f.label :password, "パスワード", class: "col-form-label col-sm-2 text-center" %>
        <div class="col-sm-6">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="pt-4 container"></div>
    <div class="container text-center">
      <%= f.submit "ログイン", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
