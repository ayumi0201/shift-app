<div class="container">
  <div class="pt-5 container"></div>
  <div class="row pb-5">
    <div class="col-5 mx-auto">
      <p class="h1 text-center">シフト申請一覧</p>
    </div>
  </div>
  <div class="container py-3"></div>

  <table class="table">
    <tr>
      <th>出勤日</th>
      <th>出勤時間</th>
      <th>退勤時間</th>
      <th>詳細</th>
      <th>申請状態</th>
    </tr>
    <% @attendance_requests.each do |attendance_request| %>
    <tr>
      <td><%= attendance_request.schedule.starting_time.strftime('%Y/%m/%d') %></td>
      <td><%= attendance_request.schedule.starting_time.strftime('%H:%M') %></td>
      <td><%= attendance_request.schedule.closing_time.strftime('%H:%M') %></td>
      <td><%= link_to '詳細', employee_attendance_request_path(attendance_request) %></td>
      <td><%= attendance_request.state_i18n %></td>
    </tr>
    <% end %>
  </table>
  <div class="row mt-5">
    <div class="col-5 mx-auto">
    <%= paginate @attendance_requests, theme: 'bootstrap-5' %>
    </div>
  </div>
</div>
