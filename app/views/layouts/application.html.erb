<!DOCTYPE html>
<html>
  <head>
    <title>PortfolioTest</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <%# 後で部分テンプレートにする %>
  <% if administrator_signed_in? %>
    <header>
      <div><%= link_to "トップ", root_path, class: "text-white" %></div>
      <div><%= link_to "ログアウト", destroy_administrator_session_path, method: :delete, class: "text-white" %></div>
    </header>
  <% end %>

  <% if employee_signed_in? %>
    <header>
      <div><%= link_to "トップ", root_path, class: "text-white" %></div>
      <div><%= link_to "ログアウト", destroy_employee_session_path, method: :delete, class: "text-white" %></div>
    </header>
  <% end %>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
